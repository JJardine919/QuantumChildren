    "scoring": {
      "bullish": {
        "price_above_ema200_weight": 0.35,
        "fast_above_slow_weight": 0.35,
        "slow_above_ema200_weight": 0.30
      },
      "bearish": {
        "price_below_ema200_weight": 0.35,
        "fast_below_slow_weight": 0.35,
        "slow_below_ema200_weight": 0.30
      },
      "neutral": {
        "price_near_ema200_weight": 0.40,
        "emas_converging_weight": 0.40,
        "distance_thresholds": {
          "near": 0.01,
          "moderate": 0.02
        }
      }
    }
  },

  "expert_assignments": {
    "BEARISH": {
      "direction": "SELL",
      "only_trades_when": "BEARISH regime detected at 80%+ confidence"
    },
    "BULLISH": {
      "direction": "BUY",
      "only_trades_when": "BULLISH regime detected at 80%+ confidence"
    },
    "NEUTRAL": {
      "direction": "BOTH",
      "only_trades_when": "NEUTRAL/ranging regime detected at 80%+ confidence",
      "range_trading": {
        "buy_zone": "Lower 25% of detected range",
        "sell_zone": "Upper 25% of detected range",
        "range_detection": "24-hour high/low"
      }
    }
  }
