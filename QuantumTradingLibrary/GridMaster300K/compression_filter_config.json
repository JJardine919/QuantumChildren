{
  "version": "2.0.0",
  "description": "Compression Filter Configuration for GridMaster 300K",
  "last_updated": "2026-02-02",

  "compression_filter": {
    "enabled": true,
    "confidence_threshold": 0.80,
    "description": "Only trade when 80%+ confident about regime match"
  },

  "compression_boost": {
    "per_expert": 12,
    "total_when_all_active": 36,
    "boost_effect": "Increases base confidence calculation by boost/100",
